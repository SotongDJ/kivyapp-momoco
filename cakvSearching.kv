<Label>
    font_name: 'database/yahei_mono.ttf'
    color: 0, 0, 0, 1

<Titol>
    canvas.before:
        Color:
            rgba: 0.85, 0.85, 0.85, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size

<Tesol>
    text_size: self.size
    halign: 'left'
    valign: 'middle'

<SearchCard>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    rows:2
    GridLayout:
        rows: 12
        size_hint_y:2

        GridLayout:
            cols:4
            Label:
                text: root.btempoTitle
            TextInput:
                id: btempo
                text: root.btempoText
                multiline: False
                write_tab: False
                on_text_validate: root.stored(tar=btempoResut,fro=btempo.text,too=root.btempoText,tan='btempo',tah=tempor)
            Button:
                text: root.storeText
                on_press: root.stored(tar=btempoResut,fro=btempo.text,too=root.btempoText,tan='btempo',tah=tempor)
            Label:
                id: btempoResut
                text: root.btempoText

        GridLayout:
