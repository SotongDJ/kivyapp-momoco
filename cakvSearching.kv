<Label>
    font_name: 'database/yahei_mono.ttf'
    color: 0, 0, 0, 1

<SearchCard>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget i.e FloatLayout
            pos: self.pos
            size: self.size
    rows:2
    GridLayout:
        rows: 12
        size_hint_y:2

        GridLayout:
            cols:4
            Label:
                text: root.dtempoTitle
            TextInput:
                id: dtempo
                text: root.dtempoText
                multiline: False
                write_tab: False
                on_text_validate: root.stored(tar=dtempoResut,fro=dtempo.text,too=root.dtempoText,tan='dtempo')
            Button:
                text: root.storeText
                on_press: root.stored(tar=dtempoResut,fro=dtempo.text,too=root.dtempoText,tan='dtempo')
            Label:
                id: dtempoResut
                text: root.dtempoText

        GridLayout:
            cols:4
            Label:
                text: root.utempoTitle
            TextInput:
                id: utempo
                text: root.utempoText
                multiline: False
                write_tab: False
                on_text_validate: root.stored(tar=utempoResut,fro=utempo.text,too=root.utempoText,tan='utempo')
            Button:
                text: root.storeText
                on_press: root.stored(tar=utempoResut,fro=utempo.text,too=root.utempoText,tan='utempo')
            Label:
                id: utempoResut
                text: root.utempoText

        GridLayout:
            cols:4
            Label:
                text: root.cokasTitle
            TextInput:
                id: cokas
                text: root.cokasText
                multiline: False
                write_tab: False
                on_text_validate: root.stored(tar=cokasResut,fro=cokas.text,too=root.cokasText,tan='cokas')
            Button:
                text: root.storeText
                on_press: root.stored(tar=cokasResut,fro=cokas.text,too=root.cokasText,tan='cokas')
            Label:
                id: cokasResut
                text: root.cokasText

        GridLayout:
            cols:4
            Label:
                text: root.keywoTitle
            TextInput:
                id: keywo
                text: root.keywoText
                multiline: False
                write_tab: False
                on_text_validate: root.stored(tar=keywoResut,fro=keywo.text,too=root.keywoText,tan='keywo')
            Button:
                text: root.storeText
                on_press: root.stored(tar=keywoResut,fro=keywo.text,too=root.keywoText,tan='keywo')
            Label:
                id: keywoResut
                text: root.keywoText

        AnchorLayout:
            anchor_y: 'center'
            anchor_x: 'center'
            Button:
                text: root.sumitText
                on_press: root.sumited(tempor)
                size_hint: 0.5,1

    ScrollView:
        size_hint_y: 4

        GridLayout:
            id: tempor
            cols: 1
            size_hint_y: 8
