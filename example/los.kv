<Label>
    color: 0, 0, 0, 1

<Button>
    background_color: 1, 1, 1, 1

<Buto>
    size_hint: 0.5,0.01
    on_press: root.pus()

<Choose>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget
            pos: self.pos
            size: self.size

    rows: 2

    hiwi: hiwi.__self__

    GridLayout:
        id: hiwi
        rows: 1
        size_hint_y: 0.8

    AnchorLayout:
        size_hint_y: 0.2
        anchor_y: 'center'
        anchor_x: 'center'
        Button:
            text: "Return"
            on_press: root.returan()
            size_hint: 0.5,1

<Selection>
    anchor_y: 'center'
    anchor_x: 'center'

    GridLayout:
        rows: 3
        size_hint: 0.5,0.5

        Button:
            text: "Login"
            size_hint: 1,1
            on_press: root.login(hiwi)

<LoginScreen>
    canvas.before:
        Color:
            rgba: 1, 1, 1, 1
        Rectangle:
            # self here refers to the widget
            pos: self.pos
            size: self.size

    rows: 3

    GridLayout:
        cols: 4
        size_hint_y: 0.2

        Label:
            text: root.usnanTitle

        TextInput:
            id: usnan
            multiline: False

        Label:
            text: root.paswdTitle

        TextInput:
            id: paswd
            password: True
            multiline: False

    AnchorLayout:
        size_hint_y: 0.2
        anchor_y: 'center'
        anchor_x: 'center'
        Button:
            text: root.sumitText
            on_press: root.sumited(resut,usnan.text,paswd.text)
            size_hint: 0.5,1

    ScrollView:
        size_hint: 1, 1

        StackLayout:
            id: resut
            cols: 2
            size_hint_y: 20
